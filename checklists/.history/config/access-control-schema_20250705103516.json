  "filters": {
    "basics": {
      "createdBy": "admin",
      "createdAt": "2025-07-05T10:00:00Z",
      "description": "Basic items visible to all users",
      "condition": "item.category === 'basic' || item.priority === 'low'",
      "accessLevels": {
        "read": 6
      }
    },
    "pre-engineering": {
      "createdBy": "admin", 
      "createdAt": "2025-07-05T10:00:00Z",
      "description": "Engineering-specific items",
      "condition": "item.isEngineering === true",
      "accessLevels": {
        "read": 4
      }
    },
    "confidential": {
      "createdBy": "admin",
      "createdAt": "2025-07-05T10:00:00Z", 
      "description": "Sensitive information",
      "condition": "item.confidential === true",
      "accessLevels": {
        "read": 2
      }
    }
  },
  
  "userAccess": {
    "exampleUser": {
      "username": "engineer_joe",
      "defaultAccessLevel": 5,
      "checklists": [
        {
          "id": "project1.json",
